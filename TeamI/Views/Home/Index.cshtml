@model TeamI.ViewModel.InspectionIndexViewModel
@{
    ViewBag.Title = "Welcome!";
}
@Styles.Render("~/style/CircleStats")
@Styles.Render("~/style/SiteTour")



@{
    if (1 == 2)
    {
        <div class="container">
            <style>
                .carouselcolour {
                    background-color: white;
                }
            </style>
            <div>
                <div id="ncImgCarousel" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#ncImgCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#ncImgCarousel" data-slide-to="1"></li>
                        <li data-target="#ncImgCarousel" data-slide-to="2"></li>
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner" role="listbox">
                        <div class="item active carouselcolour">
                            <img src="~/Images/NiagaraCollegeMediaTrades.png" alt="ncMttLogo" />
                        </div>
                        <div class="item carouselcolour">
                            <img src="~/Images/SafetyHeaderGeneric1.png" alt="Generic Safety Photo" />
                        </div>
                        <div class="item carouselcolour">
                            <img src="~/Images/PPE.png" alt="Personal Protective Equipment" />
                        </div>
                    </div>

                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#ncImgCarousel" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#ncImgCarousel" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    }
    if (1 == 1)
    {
        <div>

            <div class="row" id="dataCircles">
                @{var g = 0;
                    int b = 0;
                    int t = 0;
                    int c = 0;
                    int p = 0;
                    int o = 0;
                    foreach (var item in Model.inspection)
                    {
                        if (item.date == null) { }
                        else
                        {
                            if (item.date.Value.ToUniversalTime() < DateTime.Now.ToUniversalTime() && item.date.Value.ToUniversalTime() > DateTime.Now.AddDays(-30).ToUniversalTime())
                            {
                                if (item.status == true) { g++; } else { b++; }
                            }
                        }
                        t = g + b;
                        if (item.dueStatus == "complete") { c++; }
                        if (item.dueStatus == "pending") { p++; }
                        if (item.dueStatus == "overdue") { o++; }
                    }}
                <div class="col-xs-2">
                    <div id="circle1" data-animation="1" data-animationStep="5" data-percent="@g"></div>
                </div>
                <div class="col-xs-2">
                    <div id="circle2" data-animation="1" data-animationStep="5" data-percent="@b"></div>
                </div>
                <div class="col-xs-2">
                    <div id="circle3" data-animation="1" data-animationStep="5" data-percent="@t"></div>
                </div>
                <div class="col-xs-2">
                    <div id="circle6" data-animation="1" data-animationStep="5" data-percent="@o"></div>
                </div>
                <div class="col-xs-2">
                    <div id="circle4" data-animation="1" data-animationStep="5" data-percent="@p"></div>
                </div>
                <div class="col-xs-2">
                    <div id="circle5" data-animation="1" data-animationStep="5" data-percent="@c"></div>
                </div>

            </div>
            <div style="margin-bottom:15px;">
                <div class="row">
                    <div class="col-sm-4" style="padding-top:15px; text-align:center;">
                        <a href="@Url.Action("Create", "INSPECTIONs")" class="btn-lg btn-primary">
                            Start Inspection
                            <span class="glyphicon glyphicon-option-horizontal" aria-hidden="true"></span>
                        </a>
                    </div>
                    <div class="col-sm-4" style="padding-top:15px; text-align:center;">
                        <a href="@Url.Action("Index", "INSPECTIONs")" class="btn-lg btn-primary">
                            View Inspections
                            <span class="glyphicon glyphicon-option-horizontal" aria-hidden="true"></span>
                        </a>
                    </div>
                    <div class="col-sm-4" style="padding-top:15px; text-align:center;">
                        <a href="@Url.Action("CreateInsDet", "INSPECTIONs")" class="btn-lg btn-primary">
                            Report An Issue
                            <span class="glyphicon glyphicon-option-horizontal" aria-hidden="true"></span>
                        </a>
                    </div>

                </div>
            </div>
            <div class="row">
                <div class="col-xs-6">
                    <div class="section">
                        <h2>Upcoming Inspections</h2>
                        <div id="table-wrapper">
                            <div id="table-scroll">
                                <table class="table">
                                    <tr>
                                        <th>
                                            @Html.ActionLink("Day Of Month", "Index", new { sortOrder = ViewBag.DateSortParm })
                                        </th>
                                        <th>
                                            Building
                                        </th>
                                        <th>
                                            Room
                                        </th>
                                        <th>
                                            Section
                                        </th>

                                    </tr>
                                    @foreach (var item in Model.inspection)
                                    {
                                        if (item.date > DateTime.Now)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.date.Value.Day)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.LAB.building)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.LAB.room)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.LAB.type)
                                                </td>

                                            </tr>
                                        }
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xs-6" style="padding-left: 0px;">
                    <div class="section">
                        <h2>Corrective Action Required</h2>
                        <div id="Corrective">
                            <div id="table-wrapper">
                                <div id="table-scroll">
                                    <table class="table">
                                        <tr>
                                            <th>
                                                Description
                                            </th>
                                            <th>
                                                Comments
                                            </th>
                                            <th>
                                                Resolved
                                            </th>
                                        </tr>
                                        @foreach (var item in Model.hazardsobserved)
                                        {
                                            string value = "";
                                            if (item.Status == true)
                                            {
                                                value = "Yes";
                                            }
                                            else
                                            {
                                                value = "No";
                                            }
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.HAZARD.Description)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Comments)
                                                </td>
                                                <td>
                                                    @value
                                                </td>


                                            </tr>
                                        }
                                    </table>
                                    </div>
                                </div>
                                </div>

                            </div>
                        </div>
            </div>
        </div>
                    }
                    else
                    {
                    }

}

            </div>
@section Scripts{
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/scripts/CircleStats")
    @Scripts.Render("~/scripts/SiteTour")
}
